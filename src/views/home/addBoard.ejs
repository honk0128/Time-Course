<doctype html>
  <html>
    <head>
      <title>게시판 입력</title>
      <link rel="stylesheet" href="/css/home/abc.css" />
    </head>
    <body>
      <div id="main">
        <div id="bord">
          <h1>게시판</h1>
          <form action="/addBoard" method="post">
            <table border="1">
              <tr>
                <th>제목</th>
                <td style="width: 700px">
                  <input style="width: 100%" type="text" name="board_title" />
                </td>
              </tr>
              <tr>
                <th style="height: 500px">내용</th>
                <td style="width: 700px">
                  <textarea
                    style="height: 500px; width: 100%; overflow: scroll"
                    name="board_content"
                    rows="5"
                    cols="50"
                  ></textarea>
                </td>
              </tr>
              <tr>
                <th>작성자</th>
                <td>
                  <input type="text" name="board_user" />
                </td>

                <td></td>
              </tr>
              <tr>
                <th>비밀번호</th>
                <td>
                  <input type="password" name="board_pw" />
                </td>
              </tr>
            </table>
            <button style="margin-top: 30px" type="siubmt">등록하기</button>
          </form>
          <button
            style="margin-top: -46px; margin-left: 200px"
            onClick="location.href='/boardList'"
          >
            뒤로가기
          </button>
        </div>
      </div>
    </body>
  </html>
</doctype>
